<div class="blog-post">
  <h2 class="blog-post-title"><%= post.link_to_post %></h2>
  <p class="blog-post-meta"><%= post.published_at %></p>
  <%= post.content %>
  <% if with_comment_count %>
    <p class="text-right"><%= link_to post.comment_posts.humanize_count, post_path(post) + '/#komentarze' %></p>
  <% end %>
</div>